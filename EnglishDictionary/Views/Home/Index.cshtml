<div>
    <br />
    <div>
        <input id="word" type="text" onkeyup="func(event)" />
        <label id="meaning"></label>
    </div>
    <br />
    <div id="suggestionsDiv">
        <ul id="suggestionsList">
        </ul>
    </div>
</div>
<script>
    function func(event)
    {
        var input = document.getElementById("word").value;
        var key = event.which || event.keyCode;
        var xmlhttp = new XMLHttpRequest();
        if (key == 13)
        {
            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                    document.getElementById("meaning").innerHTML = xmlhttp.responseText;
                }
            }

            var url = "http://localhost:54100/Home/Meaning?word=" + input;
            xmlhttp.open("GET", url, true);
            xmlhttp.send();
        }
        else if (input.length > 3)
        {
            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == 4) {
                    if (xmlhttp.status == 200) {
                        var jsList = JSON.parse(xmlhttp.responseText);
                        var html = "";
                        for (var i = 0; i < jsList.length; i++) {
                            html += "<li><a onclick=\"func2('" + jsList[i] +"')\">" + jsList[i] + "</a></li>";
                        }
                        document.getElementById("suggestionsList").innerHTML = html;
                        document.getElementById("suggestionsList").style.visibility = "visible";
                    }
                }
            }

            xmlhttp.open("GET", "http://localhost:54100/Home/Suggestions?word=" + input, true);
            xmlhttp.send();
        }
        else
        {
            document.getElementById("suggestionsList").style.visibility = "hidden";
        }
    }
    function func2(word)
    {
        var xmlhttp = new XMLHttpRequest();
        xmlhttp.onreadystatechange = function () {
            if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                document.getElementById("suggestionsList").style.visibility = "hidden";
                document.getElementById("meaning").innerHTML = xmlhttp.responseText;
            }
        }

        var url = "http://localhost:54100/Home/Meaning?word=" + word;
        xmlhttp.open("GET", url, true);
        xmlhttp.send();
    }
</script>
